@model MyWebsite.Models.SpenderStatModel

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<div>
    <h4>SpenderStatModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nickname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nickname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalSpending)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalSpending)
        </dd>
        
        @foreach (CategoryStatistic category in Model.CategoryStats)
        {
            foreach (var item in category.GetType().GetProperties())
            {
                <label>@Html.Encode(item.Name);</label>
                <label>@Html.Encode(item.GetValue(category));</label>
            }

        }

    </dl>
</div>

